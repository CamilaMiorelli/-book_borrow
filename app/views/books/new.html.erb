<div class= "container">
  <div class="row">
    <div class="col-6"></div>
<%= simple_form_for @book do |f| %>
    <%= f.input :book_title %>
    <%= f.input :author %>
    <%= f.input :isbn_number %>
    <%= f.input :description %>
    <%= f.input :condition %>
    <%= f.input :book_price %>
    <%= f.input :location %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
  <% end %>
  </div>
  </div>
